{
  "name": "myna-parser",
  "version": "0.1.0",
  "description": "A JavaScript text parsing library.",
  "main": "Myna",
  "scripts": {
    "test": "mocha tests/mocha_runner.js",
    "build": "tsc",
    "postbuild": "npm run copy-files",
    "minify": "uglifyjs myna.js -o dist/myna.min.js",
    "copy-files": "copyfiles myna.ts myna.js tests/tests.js grammars/*.js docs",
    "win-cover": "istanbul cover %AppData%/npm/node_modules/mocha/bin/_mocha tests/mocha_runner.js --dir docs/coverage -R spec",
    "publish": "npm run build & npm run test & npm run win-cover"
  },
  "homepage": "https://github.com/cdiggins/myna-parser",
  "bugs": "https://github.com/cdiggins/myna-parser/issues",
  "license": "MIT",
  "author": {
    "name": "Christopher Diggins",
    "email": "cdiggins@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cdiggins/myna-parser.git"
  },
  "devDependencies": {
    "istanbul": "~0.4.5",
    "mocha": "~3.2",
    "typescript": "~2.0",
    "copyfiles": "~1.0",
    "uglify": "~2.7.5"
  }
}
